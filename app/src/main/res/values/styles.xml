<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style
        name="aShellYou.AppTheme"
        parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style
        name="ExpandedToolbarTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textSize">33.0sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style
        name="ItemTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="ItemDescription"
        parent="aShellYou.AppTheme">
        <item name="android:textSize">13.0sp</item>
        <item name="android:alpha">0.9</item>
    </style>
    
    <style
        name="LatestVersionTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">25.0sp</item>
    </style>

    <style
        name="OtherVersionTitle"
        parent="aShellYou.AppTheme">
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
        <item name="android:textSize">21.0sp</item>
    </style>

    // for devices running A11 and below
   <style
        name="ThemeOverlay.aShellYou.AmoledThemeBelowV31"
        parent=""
        tools:ignore="PrivateResource">
        <item name="android:colorBackground">#000000</item>
        <item name="android:windowBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorSurfaceContainerLowest">#000000</item>
        <item name="colorSurfaceContainerHighest">#000000</item>
        <item name="colorSurfaceDim">#000000</item>
    </style>
    
</resources>
