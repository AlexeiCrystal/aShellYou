<resources>
	
    <style
        name="AppTheme"
        parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
	
    <style
        name="ExpandedToolbarTitle"
        parent="AppTheme">
        <item name="android:textSize">33.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style
        name="LatestVersionTitle"
        parent="AppTheme">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">25.0sp</item>
    </style>

    <style
        name="OtherVersionTitle"
        parent="AppTheme">
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
        <item name="android:textSize">21.0sp</item>
    </style>

</resources>
